<% if (typeof errors !== 'undefined' && errors && errors.length > 0) { %>
    <div class="bg-red-50 border-l-4 border-red-500 rounded-md overflow-hidden shadow-sm mb-2 animate-fadeIn"
         role="alert">
        <div class="p-4">
            <div class="flex items-center mb-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-red-500 mr-2"
                     viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd"
                          d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z"
                          clip-rule="evenodd"/>
                </svg>
                <div>
                    <p class="font-bold text-red-700">There was a problem with your submission</p>
                    <p class="text-sm text-red-600">Please correct the following errors:</p>
                </div>
            </div>
            <div class="ml-7">
                <ul class="list-disc list-inside text-sm space-y-1 text-red-600">
                    <% for (let error of errors) { %>
                        <li class="animate-slideIn"><%= error %></li>
                    <% } %>
                </ul>
            </div>
        </div>

        <% if (tips !== undefined) { %>

            <!-- Tips to resolve errors -->
            <div class="bg-red-100/50 px-4 py-2 border-t border-red-200">
                <p class="text-xs text-red-700 font-medium">
                    <%- tips %>
                </p>
            </div>

        <% } %>
    </div>

    <style>
        @keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }

        @keyframes slideIn {
            from {
                transform: translateX(-10px);
                opacity: 0;
            }
            to {
                transform: translateX(0);
                opacity: 1;
            }
        }

        .animate-fadeIn {
            animation: fadeIn 0.3s ease-out;
        }

        .animate-slideIn {
            animation: slideIn 0.3s ease-out;
        }
    </style>
<% } %>